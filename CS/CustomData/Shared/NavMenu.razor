<div class="sidebar @StateCssClass">
<DxTreeView AllowSelectNodes="true" CssClass="app-sidebar">
    <Nodes>
        <DxTreeViewNode NavigateUrl="TagBox" Text="TagBox" CssClass="@rootNodeCssClass"></DxTreeViewNode>
        <DxTreeViewNode NavigateUrl="CustomGrid" Text="CustomGrid" CssClass="@rootNodeCssClass"></DxTreeViewNode>
    </Nodes>
</DxTreeView>
</div>

@code {
    const string rootNodeCssClass = "root-item";
    [Parameter] public string? StateCssClass { get; set; }
}